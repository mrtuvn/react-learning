{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@settings/*": ["src/settings/*"],
      "@types/*": ["src/types/*"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/vite-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "vite.config.ts",
    "src/types/*.ts"
  ],
  "exclude": ["node_modules"]
}
